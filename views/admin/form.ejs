    <form class="product-form" action="/<% if (isEdit) { %>edit-worker<% } else { %>add-worker<% } %>"
      method="POST">

      <div class="form-control">
        <label for="imie">Imie  <%=info[0]%></label>
        <input type="text" name="imie" id="imie" value="<%if(isRepeat || isEdit && worker) { %><%= worker.name %><% } %>" >
      </div>
      <div class="form-control">
        <label for="nazwisko">Nazwisko <%=info[1]%></label>
        <input type="text" name="nazwisko" id="nazwisko" value="<%if(isRepeat || isEdit && worker) { %><%= worker.surname %><% } %>" >
      </div>
      <div class="form-control">
        <label for="plec">Płeć <%=info[2]%></label>
        <label>
        <input type="radio" name="plec" id="plec" value="kobieta" <%if((isRepeat || isEdit) && worker&& worker.sex == "kobieta") { %> checked <% } %> > kobieta
        </label><br>
        <label>
        <input type="radio" name="plec" id="plec" value="mezczyzna" <%if(isRepeat && worker && worker.sex=="mezczyzna"|| isEdit && worker && worker.sex == "mezczyzna") { %> checked <% } %> > mężczyzna
        </label>
      </div>
      <div class="form-control">
        <label for="panienskie">Nazwisko panienskie <%=info[3]%></label>
        <input type="text" name="panienskie" id="panienskie" value="<%if(isRepeat || isEdit && worker) { %><%= worker.surname2 %><% } %>" >
      </div>
      <div class="form-control">
        <label for="email">Email <%=info[4]%></label>
        <input type="text" name="email" id="email" value="<%if(isRepeat || isEdit && worker) { %><%= worker.email %><% } %>" >
      </div>
      <div class="form-control">
        <label for="kod">Kod pocztowy <%=info[5]%></label>
        <input type="text" name="kod" id="kod" value="<%if(isRepeat || isEdit && worker) { %><%= worker.postal %><% } %>"  >
      </div>

            <% if (isEdit) { %>
            <input type="hidden" value="<%= worker.id %>" name="workerId" id="workerId">
            <% } %>

      <button class="btn" type="submit">Wyślij</button>
      <% if(isEdit) { %>
      <button class="brn"><a href="/get-workers-edit/0">Odrzuć zmiany</a> </button>
      <% } %>
    </form>


