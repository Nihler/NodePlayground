<form class="product-form" action="/<% if (isEdit) { %>change-data<% } else { %>register<% } %>" method="POST">

  <div class="form-control">
    <label for="login">Login <%=info[2]%></label>
    <input type="text" name="login" id="login" value="<%if(isRepeat || isEdit && user) { %><%= user.login %><% } %>">
  </div>
  <div class="form-control">
    <label for="password">Hasło <%=info[3]%></label>
    <input type="password" name="password" id="password">
  </div>
    <div class="form-control">
      <label for="passwordRepeat">Powtórz hasło <%=info[4]%></label>
      <input type="password" name="passwordRepeat" id="passwordRepeat">
    </div>
  <div class="form-control">
    <label for="name">Imię <%=info[0]%></label>
    <input type="text" name="name" id="name" value="<%if(isRepeat || isEdit && user) { %><%= user.name %><% } %>">
  </div>
  <div class="form-control">
    <label for="surname">Nazwisko <%=info[1]%></label>
    <input type="text" name="surname" id="surname" value="<%if(isRepeat || isEdit && user) { %><%= user.surname %><% } %>">
  </div>
<% if (isEdit && user) { %>
<input type="hidden" value="<%= user.id %>" name="userId" id="userId">
<% } %>
  <button class="btn" type="submit">Wyślij</button>
</form>


